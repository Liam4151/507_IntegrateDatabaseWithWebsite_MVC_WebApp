@model TypicalTools.Models.Comment

@{
    ViewData["Title"] = "UpdateComment";
}

<h1>Update Comment: @Model.ProductCode.ToString()</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommentId" />
            <div class="form-group">
                <label asp-for="CommentText" class="control-label"></label>
                <input asp-for="CommentText" class="form-control" />
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
            @Html.HiddenFor(a => a.ProductCode)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <form asp-action="UpdateComment">
        <input type="hidden" asp-for="ProductCode" />
    </form>
</div>

<div>
    @Html.ActionLink("Back to Comments", "CommentList","Comment", new {id = Model.ProductCode})
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
